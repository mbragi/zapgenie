{
  "name": "zapgenie",
  "private": true,
  "type": "commonjs",
  "version": "0.1.0",
  "description": "ZapGenie â€“ WhatsApp Assistant",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "build:frontend": "npm --prefix frontend run build",
    "build:full": "npm run build && npm run build:frontend",
    "start": "npx tsx src/server.ts",
    "start:with-frontend": "npm run build:frontend && npm run start",
    "dev:full": "./scripts/dev-full.sh",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "vitest run",
    "prepare": "if [ -d .git ]; then husky install; fi"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/pino": "^7.0.5",
    "axios": "^1.4.0",
    "bullmq": "^4.12.0",
    "crypto": "^1.0.1",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "google-auth-library": "^10.2.1",
    "googleapis": "^155.0.0",
    "openai": "^4.20.1",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.3",
    "redis": "^4.6.10",
    "stripe": "^14.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@octokit/rest": "^21.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
